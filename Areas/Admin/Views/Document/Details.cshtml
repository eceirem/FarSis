@model Document

<div class="text-center">
    <div class="display-6">Details</div>
</div>

<form method="post" asp-action="Update">

    <div class="text-danger" asp-asp-validation-summary="All"></div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group my-3">
        <label asp-for="Label"></label>
        <input asp-for="Label" class="form-control" placeholder="Label"/>
    </div>

    <div class="form-group my-3">
        <label for="DocumentText">Document Text</label>
        <textarea id="editor" class="form-control" rows="10" readonly>
            @Html.Raw(Model?.DocumentText ?? "")
        </textarea>
    </div>

    <script src="https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"></script>
        <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .then(editor => {
                // Force read-only mode
                editor.isReadOnly = true;
                console.log('CKEditor initialized in read-only mode.');
            })
            .catch(error => {
                console.error(error);
            });
    </script>

    <div class="form-group my-3">
        <div class="btn-group">
            <a asp-area="Admin" asp-controller="Document" asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-list"></i>
                Back to Documents
            </a>
        </div>
    </div>
</form>