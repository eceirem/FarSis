@model FarSis.Models.Document

@{
    ViewData["Title"] = "Document Details";
}

<h1>Document Details</h1>

<div>
    <h4>Document Information</h4>
    <hr />
    <div class="form-group">
        <label for="Label">Label</label>
        <p>@Model.Label</p>
    </div>
    <div class="form-group">
        <label for="DocumentText">Document Text</label>
        <p>@Html.Raw(Model.DocumentText)</p>
    </div>
    <div class="form-group">
        <label for="Department">Department</label>
        <p>@Model.Department?.Name</p>  <!-- Assuming Document has a reference to a Department -->
    </div>

    <div>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    </div>
</div>
