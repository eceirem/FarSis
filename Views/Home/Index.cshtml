@{
    ViewData["Title"] = "Home Page";
    var today = DateTime.Now;
}

<div class="text-center">
    <h2 class="display-4">Faaliyet Rapor Sistemine Hoş Geldiniz!</h2>

    <p class="lead">Bugün: <strong>@today.ToString("dd MMMM yyyy"), @today.ToString("dddd")</strong></p>    

    <a asp-controller="Document" asp-action="Create" class="btn btn-primary mt-3">Yeni Doküman Oluştur</a>
</div>

<hr>

<div class="container mt-4">
    <h4>📂 Önceden Gönderilen Dokümanlar</h4>

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Doküman Adı</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var doc in Model)
                {
                    <tr>
                        <td>@doc.Name</td>
                        <td>@doc.CreatedAt.ToString("dd MMMM yyyy HH:mm")</td>
                        <td>
                            <a asp-controller="Document" asp-action="Details" asp-route-id="@doc.Id" class="btn btn-info btn-sm">Görüntüle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">Henüz bir doküman gönderilmedi.</p>    
    }
</div>
